<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#008B8B"
    tools:context="com.example.seol.sos.MyinfoActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:columnCount="2"
        android:rowCount="5"
        android:orientation="vertical"
        android:useDefaultMargins="true">

        <TextView
            android:paddingStart="5dp"
            android:text="이름"
            android:layout_gravity="center_vertical"
            android:textColor="#008B8B"
            android:textStyle="bold"/>

        <TextView
            android:paddingStart="5dp"
            android:text="생년월일"
            android:layout_gravity="center_vertical"
            android:textColor="#008B8B"
            android:textStyle="bold"/>

        <TextView
            android:paddingStart="5dp"
            android:text="성별"
            android:layout_gravity="center_vertical"
            android:textColor="#008B8B"
            android:textStyle="bold"/>

        <TextView
            android:paddingStart="5dp"
            android:text="장애유형"
            android:layout_gravity="center_vertical"
            android:textColor="#008B8B"
            android:textStyle="bold"/>

        <TextView
            android:paddingStart="5dp"
            android:text="보장구"
            android:layout_gravity="center_vertical"
            android:textColor="#008B8B"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/userNameUpdate"
            android:hint="홍길동"/>

        <EditText
            android:id="@+id/birthdayUpdate"
            android:hint="YYYYMMDD"/>

        <RadioGroup
            android:id="@+id/genderUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남자" />

            <RadioButton
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여자" />
        </RadioGroup>

        <EditText
            android:id="@+id/typeOfDisableUpdate"
            android:hint="~장애 ~급" />

        <RadioGroup
            android:id="@+id/typeOfZimmerFrameUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/manualWheelChair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="휠체어(수)" />

            <RadioButton
                android:id="@+id/autoWheelChair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="휠체어(전)" />

            <RadioButton
                android:id="@+id/walker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="워커/목발" />
        </RadioGroup>

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/saveMyInfoButton"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="@drawable/savebutton"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout>